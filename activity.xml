<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4ecbf">

        <androidx.cardview.widget.CardView
            app:cardElevation="30dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="30dp"
            android:layout_width="350dp"
            android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your mobile Number"
                android:textColor="#09282B"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />



            <EditText
                android:id="@+id/e1"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:maxLength="10"
                android:hint="+91"
                android:background="@drawable/custom_input"

                android:layout_centerInParent="true"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You won't be able to get verified documents using your Mobile Number authentication."
                android:layout_below="@+id/e1"
                android:layout_marginLeft="20dp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:id="@+id/b1"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Next"
            android:textStyle="bold"
            android:layout_marginTop="280dp"
            android:textSize="20sp"
            android:textColor="#fefdfa"
            android:background="@drawable/button_round"
            android:layout_marginLeft="230dp"

            />
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For fetching verified documents"
                android:textSize="20sp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="90dp"
                android:layout_below="@+id/b1"></TextView>
            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue with Aadhar"
                android:layout_marginLeft="45dp"
                android:background="@drawable/button_round"
                android:textSize="20sp"
                android:textColor="#fefdfa"
                android:layout_marginTop="500dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

